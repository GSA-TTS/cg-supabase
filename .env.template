# Environment variables for Supabase Terraform deployment
# Usage:
# 1. Copy this file: cp .env.template .env
# 2. Edit .env with your actual values
# 3. Source the file: source .env
# 4. Run terraform: terraform plan

# Cloud Foundry Authentication
#export TF_VAR_cf_user="your-cloudgov-username"
#export TF_VAR_cf_password="your-cloudgov-password"

# Cloud Foundry Organization and Space
export TF_VAR_cf_org_name="your-org-name"
export TF_VAR_cf_space_name="your-space-name"
export TF_VAR_cf_space_id="your-space-id"

# External Dependencies
export TF_VAR_https_proxy="your-https-proxy-url"
export TF_VAR_s3_id="your-s3-bucket-id"
export TF_VAR_logdrain_id="your-logdrain-service-id"

# Supabase Authentication Keys (generate these with supabase CLI or online JWT generator)
export TF_VAR_jwt_secret="your-jwt-secret-key"
export TF_VAR_anon_key="your-anonymous-key"
export TF_VAR_service_role_key="your-service-role-key"

# Optional Configuration (defaults provided)
export TF_VAR_database_plan="micro-psql"
export TF_VAR_rest_instances=1
export TF_VAR_storage_instances=1
export TF_VAR_disk_quota=1024

